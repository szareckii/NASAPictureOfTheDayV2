<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="textInputStyle">@style/AppTextField</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
    </style>

<!--    Тема космоса-->
    <style name="AppThemeSpace" parent="Theme.MaterialComponents.NoActionBar">
        <item name="textInputStyle">@style/AppTextField</item>
    </style>

<!--    Стиль для BottomNavigation-->
    <style name="BottomNavigation">
        <item name="android:background">@color/wisteria</item>
        <item name="itemTextColor">@color/colorAccent</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

<!--    Стиль для TextInputLayout-->
    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/text_field_background</item>
        <item name="counterMaxLength">20</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

<!--    Стиль для SmallComponent-->
    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!--    Стиль для TitleView-->
    <style name="TitleView" parent="AppTheme">
        <item name="color">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    Стиль для TextViewBottomSheet-->
    <style name="TextViewBottomSheet" parent="AppTheme">
        <item name="android:textSize">10sp</item>
    </style>

    <!--    Стиль для PaddingStartEnd-->
    <style name="PaddingStartEnd" parent="AppTheme">
        <item name="paddingStart">@dimen/paddingStart</item>
        <item name="paddingEnd">@dimen/paddingEnd</item>
    </style>

    <style name="BottomSheet" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
<!--        <item name="android:textSize">20sp</item>-->
    </style>

    <style name="BackgroundWhite" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="FontSizeSmall" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="FontSizeMedium" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_med</item>
    </style>

    <style name="FontSizeLarge" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="FontSizeSmallSpace" parent="AppThemeSpace">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="FontSizeMediumSpace" parent="AppThemeSpace">
        <item name="android:textSize">@dimen/text_size_med</item>
    </style>

    <style name="FontSizeLargeSpace" parent="AppThemeSpace">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

</resources>
